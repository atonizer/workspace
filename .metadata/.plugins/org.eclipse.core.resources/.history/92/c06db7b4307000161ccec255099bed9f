package test;

public class AccountTest {

	public static void main(String[] args) 
	{
		Account account1 = new Account("John Doe", 200);
		Account account2 = new Account("Jane Doe", 100);
		
		// display initial balance of each object
		System.out.printf("%s balance: $%.2f%n", 
				account1.getName(), account1.getBalance());
		System.out.printf("%s balance: $%.2f%n%n", 
				account1.getName(), account2.getBalance());
		
		System.out.printf("account 1 name is: %s%n", account1.getName());
		System.out.printf("account 2 name is: %s%n", account2.getName());
	}

}
